<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoa_adir"
    tools:context=".MainActivity7">

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="115dp"
            android:layout_height="88dp"
            app:srcCompat="@drawable/icono" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:text="Agrega nuevo evento"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="31dp"
            android:layout_height="33dp"
            app:srcCompat="@drawable/agregar2" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Nombre del evento"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/gris"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_gravity="center"
            android:text="Lugar del evento"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/editTextText5"
            android:layout_width="296dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@color/gris"
            android:ems="10"
            android:inputType="text"
            android:text="" />


    </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <!--<TextView
                android:id="@+id/textView11"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Fecha"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"/>-->

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="54dp"
                android:layout_height="31dp"
                android:clickable="true"
                android:onClick="abrirCalendario"
                app:srcCompat="@drawable/fecha_del_calendario" />

            <EditText
                android:id="@+id/editTextFechaa"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView17"
                android:clickable="false"
                android:focusable="false"
                android:inputType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Foto"
                android:scaleType="fitCenter"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="55dp"
                android:layout_height="36dp"
                android:clickable="true"
                android:onClick="abrirGaleria"
                app:srcCompat="@drawable/imagen" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewSelected"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="361dp"
            android:layout_height="242dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Descripción"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/gris"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Organizador(s)"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editTextText7"
                android:layout_width="296dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/gris"
                android:ems="10"
                android:inputType="text"
                android:text="" />

            <Button
                android:id="@+id/button5"
                android:layout_width="152dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:onClick="guardarEnFirebase"
                android:text="Añadir" />

            <Button
                android:id="@+id/button6"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:onClick="abreActivity3"
                android:text="Cancelar" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
